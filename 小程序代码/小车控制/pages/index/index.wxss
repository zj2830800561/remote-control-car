.box{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.container {
  width: 300rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 9999px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 4px;
}

.container__label__selected{
  width: 50%;
  height: 98%;
  background-color: #357edd;
  border-radius: 9999px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.container__label{
  width: 50%;
  height: 98%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.label__line__selected{
  width: 80%;
  height: 20%;
  background-color: white;
}
.label__line{
  width: 80%;
  height: 20%;
  background-color: rgba(0, 0, 0, 0.1);
}